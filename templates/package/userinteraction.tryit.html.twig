
<div class="modal-dialog preview">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title-preview" id="modalTryItLabel">{{ call("Glpi\\RichText\\RichText::getEnhancedHtml", [entry['title']])|raw }}</h5>
        </div>
        <div class="d-flex modal-body">
            <div class="me-2">
                {{ call("GlpiPlugin\\Deploy\\Package_UserInteraction::getIconForLabel", [entry['icon'], 'fa-2x'])|raw }}
            </div>
            <div>
                {{ call("Glpi\\RichText\\RichText::getEnhancedHtml", [entry['text']])|raw }}
            </div>
        </div>
        <div class="modal-footer">
            {% if entry['interaction_type'] == 'ok' or entry['interaction_type'] == 'ok_sync' %}
                <button type="button"  class="btn btn-primary">OK</button>
            {% elseif entry['interaction_type'] == 'okcancel' %}
                <button type="button" class="btn btn-primary">OK</button>
                <button type="button" class="btn btn-primary btn-danger">Cancel</button>
            {% elseif entry['interaction_type'] == 'yesno' %}
                <button type="button" class="btn btn-primary">Yes</button>
                <button type="button" class="btn btn-primary btn-danger">No</button>
            {% elseif entry['interaction_type'] == 'abortretryignore' %}
                <button type="button" class="btn btn-primary btn-danger">Abort</button>
                <button type="button" class="btn btn-primary">Retry</button>
                <button type="button" class="btn btn-primary btn-danger">Ignore</button>
            {% elseif entry['interaction_type'] == 'retrycancel' %}
                <button type="button" class="btn btn-primary">Retry</button>
                <button type="button" class="btn btn-primary btn-danger">Cancel</button>
            {% elseif entry['interaction_type'] == 'canceltrycontinue' %}
                <button type="button" class="btn btn-primary btn-danger">Cancel</button>
                <button type="button" class="btn btn-primary">Try</button>
                <button type="button" class="btn btn-primary">Continue</button>
            {% elseif entry['interaction_type'] == 'yesnocancel' %}
                <button type="button" class="btn btn-primary">Yes</button>
                <button type="button" class="btn btn-primary btn-danger">No</button>
                <button type="button" class="btn btn-primary btn-danger">Cancel</button>
            {% endif %}
        </div>
    </div>
</div>
