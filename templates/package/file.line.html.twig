<td>
    <a href="#" class="edit_{{ subitem_type }}" data-id="{{ entry['id'] }}">
        <i class="fa-fw fa-lg {{ call('GlpiPlugin\\Deploy\\Package_File::getMimetypeFaIcon', [entry['mimetype']]) }}"
           title="{{ entry['mimetype'] }}"
           data-bs-toggle="tooltip"></i>
        <span>{{ entry['filename'] }}</span>
    </a>
</td>
<td>{{ call('Toolbox::getSize', [entry['filesize'] ?? 0]) }}</td>
<td>{{ entry['p2p'] == 1 ? "<i class='ti ti-check'>" : "" }}</td>
<td>{{ entry['p2p'] == 1 ? entry['p2p_retention_days'] : "" }}</td>
<td>{{ entry['uncompress'] == 1 ? "<i class='ti ti-check'>" : "" }}</td>
<td>
    <span class="text-muted d-inline-block text-truncate"
          style="max-width: 250px"
          title="{{ entry['sha512'] }}"
          data-bs-toggle="tooltip">
        {{ entry['sha512'] }}
    </span>
</td>
<td>
{% set plugin_path = call("Plugin::getWebDir", ['deploy']) %}
    <a
    href="{{ plugin_path }}/front/package.form.php?download_file=1&amp;file_id={{ entry['id'] }}"
    title='{{ __('Download', 'glpiinventory') }}'
    data-bs-toggle='tooltip'
    target='_blank' >
        <i class='ti ti-download'></i>
    </a>
</td>
